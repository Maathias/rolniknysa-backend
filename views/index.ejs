<!DOCTYPE html>
<html lang="pl">
  <%- include head.ejs %>

  <body>
    <%- include nav.ejs %>

    <div class="container">
      <div id="carouselMain" class="carousel slide mt-3" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselMain" data-slide-to="0" class="active"></li>
          <li data-target="#carouselMain" data-slide-to="1"></li>
          <li data-target="#carouselMain" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              class="d-block w-100"
              src="https://rolniknysa.pl/images/slider/sli7.jpg"
              alt="First slide"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="https://rolniknysa.pl/images/slider/sli_odczyn.jpg"
              alt="Second slide"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="https://rolniknysa.pl/images/slider/sli2.jpg"
              alt="Third slide"
            />
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselMain" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselMain" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <hr>

      <div class="row">
        <div class="col-md-12 mt-3" id="posts">

          <% for(article of articles) { %>
            <div class="card mb-3">
              <div class="row no-gutters">
                <div class="col-md-3 align-self-center">
                  <a href="/article/<%- article.src %>"><img class="card-img" src="<%- article.img[0] %>" alt="<%- article.img[1] %>"></a>
                </div>
                <div class="col-md-9">
                  <div class="card-body">
                    <a href="/article/<%- article.src %>">
                      <h5 class="card-title"><%- article.title %></h5>
                    </a>
                    <p class="card-text text-justify"><%- article.content.slice(0, locals.articleDescriptionLimit)+(article.content.length > locals.articleDescriptionLimit ? "..." : "") %></p>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <div class="row">
                  <div class="col-sm-7 text-truncate">
                     <% for(tag of article.tags) {%>
                        <a href="/tag/<%- tag %>"><%- tag %></a>
                      <% } %>
                  </div><div class="col-sm-5">
                    <p class="card-text text-right">
                      <small class="text-muted">
                        <time data-update datetime="<%- article.date %>"><%- dateFormat(article.date) %></time>
                      </small>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% } %>

          <a href="/tag/" class="btn btn-sm btn-block btn-rolnik">Wszystkie artyku≈Çy</a>

        </div>
        
        <div class='col-md-4'>
              
        </div>
      </div>

    <%- include footer.ejs %>
      
    </div>

	<%- include scripts.ejs %>
  </body>
</html>
