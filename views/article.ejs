<!DOCTYPE html>
<html lang="pl">
  <%- include head.ejs %>

  <body>
    <%- include nav.ejs %>

    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1 class="mt-4"><%= article.title %></h1>

          <small class="text-muted">
            Utworzono: <a href="" class="text-muted"><time data-update datetime="<%- article.date %>"><%- dateFormat(article.date) %></time></a>,
            <br class="d-block d-sm-none"/>
            przez <a href="#" class="button"><%= article.author %></a>
            <br>
            Wy≈õwietlenia: <%- article.stats.views %>
          </small>
          <hr>
          <img class="img-fluid rounded" src="<%- article.img[0] %>" alt="<%- article.img[1] %>">
          <hr>

          <div class="articleContent">
            <%- article.content %>
          </div>
          
      </div>

      <div class="col-lg-4 col-md-12">
        
        <div class="card my-4">
          <h5 class="card-header">Kategorie</h5>
          <div class="card-body pt-3 tagsList">
            <% for(tag of article.tags) {%>
              <a class="tagBox" href="/tag/<%- tag %>"><%- tag %></a>
            <% } %>
          </div>
        </div>

        <div class="card my-4">
          <h5 class="card-header">Ostatnie posty</h5>
          <div class="card-body p-1">

            <% for(article of articles) { %>
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-truncate p-2">
                  <img src="https://placehold.it/30x30" width="30" height="30" class="mr-2" alt="...">
                  <a href="/article/<%- article.src %>"><%- article.title %></a>
                </li>
              </ul>
            <% } %>

          </div>
        </div>

      </div>

      </div>
      <%- include footer.ejs %>
    </div>

    <%- include scripts.ejs %>
  </body>
</html>
